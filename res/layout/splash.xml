<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:background="#00000000"
	android:layout_height="fill_parent" android:keepScreenOn="true">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="top|center_horizontal">

		<ImageView android:paddingBottom="20sp"
			android:layout_width="wrap_content" android:id="@+id/ImageView01"
			android:src="@drawable/wqr_logo" android:layout_height="wrap_content"
			android:paddingTop="20sp"></ImageView>

		<ProgressBar android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/splashProgBar"
			android:paddingTop="0sp"></ProgressBar>
	</LinearLayout>

	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="bottom|center_horizontal">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="iCOMMS"
			android:textSize="20sp" android:gravity="bottom|center"
			android:paddingBottom="20sp" />

	</LinearLayout>
</FrameLayout>